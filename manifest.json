{
   "manifest_version": 3,
   "name": "Pet",
   "description": "河豚!?",
   "version": "1.3",
   "background": {
      "service_worker": "background.js"
   },
   "action": {
      "default_popup": "popup.html",
      "default_icon": {
         "16": "images/Icon_16.png",
         "32": "images/Icon_32.png",
         "48": "images/Icon_48.png",
         "128": "images/Icon_128.png"
      }
   },
   "permissions": [
      "contextMenus",
      "tabs",
      "scripting",
      "activeTab"
   ],
   "host_permissions": [
      "*://*/*"
   ],
   "icons": {
      "16": "images/Icon_16.png",
      "32": "images/Icon_32.png",
      "48": "images/Icon_48.png",
      "128": "images/Icon_128.png"
   },
   "content_scripts": [
      {
         "js": [
            "content.js"
         ],
         "css": [
            "content.css"
         ],
         "matches": [
            "https://*/*",
            "http://*/*"
         ]
      }
   ]
}